@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Models.Product>
<div class="row pb-3">
	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
					<div class="card">
						<img src="https://localhost:7100/@product.ImageUrl" class="card-img-top product-image" />
						<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-primary">@product.Name</p>
								<p class="card-title text-info"></p>
							</div>
							<div class="pl-1">
								<p>List Price:<b>@product.price.ToString("0.00")</b></p>
							</div>
							@*<div class="pl-1">
								<p>Discount:<b>Rs.@product.Discount Off</b></p>
							</div>*@
						</div>
					</div>
					<div>
						<a class="btn btn-primary form-control" asp-action="Details" asp-route-id="@product.ProductID">Detail</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>
<style>
	.product-image {
		max-width: 100%;
		max-height: 200px;
		width: auto;
		height: auto;
		object-fit: contain;
	}
</style>