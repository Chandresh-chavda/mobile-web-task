
@{
    ViewData["Title"] = "IndexForAdmin";
}
@model IEnumerable<AddProductDto>

<div class="container" p-3>
    <div class="row" pt-4">
        <div class="col-6">


        
              


        </div>
        <div class="col-6 text-end">
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" id="tablelist" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Discription
                </th>

                <th>
                    Quentity
                </th>
                <th>
                    Prise
                </th>
                <th>
                    Discount
                </th>
                <th>
                    IsActive
                </th>
                <th>

                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.Description
                    </td>
                    <td width="20%">
                        @obj.Quentity
                    </td>
                    <td width="20%">
                        ₹@obj.price
                    </td>
                    <td width="20%">
                        ₹@obj.Discount
                    </td>
                    @if (obj.IsActive == true)
                    {
                        <td width="20%" style="color:blue">
                        @obj.IsActive
                    </td>
                    }else{
                    <td width="20%" style="color:red">
                        @obj.IsActive
                    </td>
                    }
                    <td width="30%">
                        <div class="btn-group" role="group" >
                            @if (obj.IsActive == true)
                            {
                                <a asp-area="User" asp-controller="Product" asp-action="DeActive" asp-route-id="@obj.ProductID" class="btn btn-outline-danger mx-1" style="width:75px;display: flex; justify-content: center; align-items: center;">
                                   DeActive
                                </a>
                            }
                            else
                            {
                                <a asp-area="User" asp-controller="Product" asp-action="DeActive" asp-route-id="@obj.ProductID" class="btn btn-outline-success mx-1" style="width:75px; text-align:center">
                                    Active
                                </a>
                            }
                           </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div style="margin-left:10px;">
<a asp-area="Admin" asp-controller="Home" asp-action="Dashboard" class="btn  btn-outline-info mx-1" >
    Back
</a>
</div>